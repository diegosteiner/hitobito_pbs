= field_set_tag Role.human_attribute_name(:dates) do
  = f.labeled(:created_at) do
    = f.date_field(:created_at, class: 'date span6', value: l(@role.created_at.try(:to_date), format: :default))

  = f.labeled(:deleted_at) do
    - deleted_at = @role.deleted_at.try(:to_date)
    = f.date_field(:deleted_at, class: 'date span6', value: (deleted_at ? l(deleted_at, format: :default) : nil ))

= field_set_tag t('.notification') do
  %p= t('.notification_hint')
